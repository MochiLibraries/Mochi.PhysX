<Project Sdk="Microsoft.NET.Sdk">
  <!-- ==============================================================================================================
  This package is a placeholder for a future Mochi.PhysX package that will contain nothing but a common reference
  assembly and require the developer to explicitly reference the appropriate RID-specific Mochi.PhysX package.
  =============================================================================================================== -->
  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>

    <!-- ==============================================================================================================
    Package Info
    =============================================================================================================== -->
    <IsPackable>true</IsPackable>
    <PackageId>Mochi.PhysX</PackageId>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <IncludeSymbols>false</IncludeSymbols>
    
    <!-- Ignore warnings about not providing any assemblies -->
    <NoWarn>$(NoWarn);NU5128</NoWarn>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\Mochi.PhysX\Mochi.PhysX.csproj" />
  </ItemGroup>
</Project>
